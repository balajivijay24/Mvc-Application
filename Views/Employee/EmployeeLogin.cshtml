@model User
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Identity Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
     <link rel="stylesheet" href="~/css/login.css" type="text/css"asp-append-version="true" />
    <link rel="stylesheet" href="~/IdentityManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="slide navbar style.css">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
</head>

<style>
 #container {
    overflow:hidden;
    position:relative; 
    }
#hideMe {
    -webkit-animation: cssAnimation 5s forwards; 
    animation: cssAnimation 5s forwards;
}
@@keyframes cssAnimation {
    0%   {opacity: 1;}
    90%  {opacity: 1;}
    100% {opacity: 0;}
}
@@-webkit-keyframes cssAnimation {
    0%   {opacity: 1;}
    90%  {opacity: 1;}
    100% {opacity: 0;}
}
</style>

	
<body>
     <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light  ">
            <div class="container-fluid">
                <img src="~/images/Elogo2.png" style="width: 5%;margin-right:30px;"  alt="LOGO">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EMPLOYEE MANAGEMENT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" >
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a style="float: right;"  class="nav-link text-dark" asp-area="" asp-controller="" asp-action="Privacy"></a>
                        </li>
                    </ul>
                </div> 
               
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end" >
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><b>Back</b></a>
                        </li>
                    </ul>
                </div> 
                </div>  
            </div>
        </nav>
     </header>
 <form1>    
	<div class="main">  	
		<input type="checkbox" id="chk" aria-hidden="true">

			<div class="Login">
				<form method="post">
                     <label for="chk" aria-hidden="true">Log In</label>
                     <center><i class='fa fa-user' style='font-size:88px;color:white;'></i></center>
					
                     
                    @* <input   asp-for="role" placeholder="Role: Admin/Employee" required> *@
                    <input   asp-for="EmailId" placeholder="Email" required>
					<input  asp-for="userPassword" placeholder="Password" required>
@* 
                   <select asp-for="role" class="form-control" required style="width:60%;height:40px; background: #e0dede;justify-content: center;display: flex;margin: 20px auto;padding: 10px;" >
                        <option value="Select Role">Select User Role</option>
                        <option value="Admin">Admin</option>
                         <option value="Employee">Employee</option>
                    </select> *@



                     <div>
                     @if (@TempData["pass"]!=null)
				{
					<div>
				<div id='container'>
    				<div id='hideMe' style="text-align: center;">Your password is @TempData["pass"]</div>
					@{
						TempData["pass"]=null;
					}
				</div>
				</div>
					
				}
                   </div>

                      <div>
                     @if (@TempData["msg"]!=null)
				{
					<div>
				<div id='container'>
    				<div id='hideMe' style="text-align: center;"> @TempData["msg"]</div>
					@{
						TempData["msg"]=null;
					}
				</div>
				</div>
					
				}
                   </div>
					<button type="submit" >Sign In</button>
                    <center> <a style="color:white;" asp-area="" asp-controller="Employee" asp-action="forgotPassword">Forget Password?</a></center>
				</form>
			</div>

			
	</div>
</form1>
</body>
</html>
