@model EmployeeData
@inject IHttpContextAccessor HttpContextAccessor;
@{
    ViewData["Title"] = "Create";
}


<head>
     <link rel="stylesheet" href="~/css/form.css" type="text/css"asp-append-version="true" />
    <meta http-equiv='refresh'content="10000;url=https://localhost:7087/Main/SessionExpired" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
  <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light  ">
            <div class="container-fluid">
                <img src="~/images/Elogo2.png" style="width: 5%;margin-right:30px;"  alt="LOGO">
                <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Profile">EMPLOYEE MANAGEMENT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse  justify-content-between">
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="EmployeeData" asp-action="Create"><b>Add Employee</b></a> </li>
                        <li class="nav-item">
                             <a class="nav-link text-dark" asp-area="" asp-controller="EmployeeData" asp-action="Index"><b>Update & Delete</b></a> </li>
                        
                      </div>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end" >
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                         <a class="nav-link text-dark" asp-area="" asp-controller="Request" asp-action="Index"> <i class="fa fa-bell" style="font-size:28px;color:rgb(22, 17, 19)"></i></a>
                           
                        </li>
                        <li class="nav-item">
                         <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Profile"> <i class="fa fa-user" style="font-size:28px;color:rgb(22, 17, 19)"></i></a>
                         
                        </li>
                         <li class="nav-item">
                        
                           <a class="greeting nav-link text-dark" style="color: rgb(187, 26, 26);">  Hi  @HttpContextAccessor.HttpContext.Session.GetString("EmailId")</a>
                        </li>
                        
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="logOut"><b>Logout</b></a>
                        </li>
                    </ul>
                </div> 
                             @* <ul class="navbar-nav ">
                              <h5 class="greeting" style="color: rgb(187, 26, 26);"> Hi  @HttpContextAccessor.HttpContext.Session.GetString("EmailId")</h5>
                          </ul></div> *@
                         
                        
                  
            </div>
        </nav>
 
 <h3 style="text-align:center; color:white;margin-top:10px;margin-bottom:10px;">Add a New Employee</h3>
    <div class="container">


    

    <div class="content">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="user-details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group input-box">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" placeholder="Enter Employee Name" class="form-control" />
                <span asp-validation-for="Name"  class="text-danger"></span>
            </div>
            
            <div class="form-group input-box">
                <label asp-for="ProfilePicture" class="control-label"></label>
                  <input type="file" name="file" />
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>

            <div class="form-group input-box">
                <label asp-for="UserID" class="control-label"></label>
                <input asp-for="UserID"  placeholder="Enter Employee Email Id" class="form-control" />
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
            <div class="form-group input-box">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
             <div class="form-group input-box">
                <label asp-for="EmployeePackage" class="control-label"></label>
                <input asp-for="EmployeePackage"  placeholder="Enter Employee Annual Package" class="form-control" />
                <span asp-validation-for="EmployeePackage" class="text-danger"></span>
            </div>

             <div class="form-group input-box">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender"  class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group input-box">
                <label asp-for="Experience" class="control-label"></label>
                <input asp-for="Experience" class="form-control" />
                <span asp-validation-for="Experience" class="text-danger"></span>
            </div>
            <div class="form-group input-box">
                <label asp-for="MobileNumber" class="control-label"></label>
                <input asp-for="MobileNumber" class="form-control" />
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>
             <div class="form-group input-box">
                <label asp-for="Aadhaar" class="control-label"></label>
                <input asp-for="Aadhaar" class="form-control" />
                <span asp-validation-for="Aadhaar" class="text-danger"></span>
            </div>
            <div class="form-group input-box">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group input-box">
                <label asp-for="TeamName" class="control-label"></label>
                <input asp-for="TeamName" placeholder="Enter Employee TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group input-box">
                <label asp-for="DateofBirth" class="control-label"></label>
                <input asp-for="DateofBirth" class="form-control" />
                <span asp-validation-for="DateofBirth" class="text-danger"></span>
            </div>
                
            <div class="form-group " style="margin-right:140px;margin-top:25px;" >
                <input type="submit" value="Create" class="btn btn-primary" />
                 <a asp-action="Index">Back to List</a>
            </div>
            </div>
            <div Class="input-box">
        
             </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
