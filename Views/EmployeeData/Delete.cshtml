<h1 style="text-align: center;">Delete</h1>

<div>
    <div class="container emp-profile" style="margin-bottom: 100px;">
            <form method="post">
                <div class="row">
                    <div class="col-md-4">
                        <div class="profile-img">
                            <img src="~/images/@Model.ProfilePicture" style="height:160px;width:140px"/>
                            @* <div class="file btn btn-lg btn-primary">
                                Change Photo
                                <input type="file" name="file"/>
                            </div> *@
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="profile-head">
                                    <h5>
                                        @Html.DisplayFor(model => model.Name)
                                    </h5>
                                    <h6>
                                          @Html.DisplayFor(model => model.UserID)
                                    </h6>
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="ID" />
                            <input class="edit-btn" name="btnAddMore" style="color:rgb(43, 15, 167)" type="submit" value="Confirm to Delete" class="btn btn-danger" />
                        </form>
                       
                  <div style="margin-top: 5px; margin-left :25px">
                     <button class="profile-edit-btn" name="btnAddMore" style="color:rgb(120, 201, 228)"><a asp-controller="EmployeeData" asp-action="Index">Back to List</a></button>
                        
                       </div>  
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="profile-work">
                            @* <p>WORK LINK</p>
                            <a href="">Website Link</a><br/>
                            <a href="">Bootsnipp Profile</a><br/>
                            <a href="">Bootply Profile</a>
                            <p>SKILLS</p>
                            <a href="">Web Designer</a><br/>
                            <a href="">Web Developer</a><br/>
                            <a href="">WordPress</a><br/>
                            <a href="">WooCommerce</a><br/>
                            <a href="">PHP, .Net</a><br/> *@
                            
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="tab-content profile-tab" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>User Id</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p>@Html.DisplayFor(model => model.UserID)</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Name</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p> @Html.DisplayFor(model => model.Name)</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Password</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p>@Html.DisplayFor(model => model.Password)</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Phone</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p> @Html.DisplayFor(model => model.MobileNumber)</p>
                                            </div>
                                        </div>
                                         <div class="row">
                                            <div class="col-md-6">
                                                <label>Aadhaar</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p>@Html.DisplayFor(model => model.Aadhaar)</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Profession</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p> @Html.DisplayFor(model => model.TeamName)</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Experience</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p>@Html.DisplayFor(model => model.Experience)</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Date-of-Birth</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p> @Html.DisplayFor(model => model.DateofBirth)</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Address</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p>@Html.DisplayFor(model => model.Address)</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Gender</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p> @Html.DisplayFor(model => model.Gender)</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Employee Package</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p> @Html.DisplayFor(model => model.EmployeePackage)</p>
                                            </div>
                                        </div>
                            </div>
                            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                        
                                
                            </div>
                        </div>
                    </div>
                </div>
