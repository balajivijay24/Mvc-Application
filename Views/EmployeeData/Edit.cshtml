                              <h5 class="greeting" style="color: rgb(187, 26, 26);"> Hi  @HttpContextAccessor.HttpContext.Session.GetString("EmailId")</h5>
                          </ul></div> *@
                         
                        
                  
            </div>
        </nav>
 
  </header>
<h1></h1>

<h2 style="text-align: center;color:white;">Edit Employee Data</h2>

<div class="container">

    <div class="content">

        <form asp-action="Edit" enctype="multipart/form-data">
            <div class="user-details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ID" />
            <div class="form-group">

              

                <img src="~/images/@Model.ProfilePicture" style="height:150px;width:150px" />

                <input type="file" name="file" />

                <span asp-validation-for="ProfilePicture" class="text-danger"></span>

            </div>
             <div class="form-group input-box">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <div  style="margin-top: 10px;">
                <label asp-for="UserID" class="control-label"></label>
                <input asp-for="UserID" class="form-control" />
                <span asp-validation-for="UserID" class="text-danger"></span></div>
            </div>
            @* <div class="form-group input-box">
                
            </div> *@
            
             <div class="form-group input-box">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
             <div class="form-group input-box">
                <label asp-for="Experience" class="control-label"></label>
                <input asp-for="Experience" class="form-control" />
                <span asp-validation-for="Experience" class="text-danger"></span>
            </div>
             <div class="form-group input-box">
                <label asp-for="EmployeePackage" class="control-label"></label>
                <input asp-for="EmployeePackage" class="form-control" />
                <span asp-validation-for="EmployeePackage" class="text-danger"></span>
            </div>

            <div class="form-group input-box">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group input-box">
                <label asp-for="MobileNumber" class="control-label"></label>
                <input asp-for="MobileNumber" class="form-control" />
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>
            <div class="form-group input-box">
                <label asp-for="Aadhaar" class="control-label"></label>
                <input asp-for="Aadhaar" class="form-control" />
                <span asp-validation-for="Aadhaar" class="text-danger"></span>
            </div>
            <div class="form-group input-box">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group input-box">
                <label asp-for="TeamName" class="control-label"></label>
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group input-box">
                <label asp-for="DateofBirth" class="control-label"></label>
                <input asp-for="DateofBirth" class="form-control" />
                <span asp-validation-for="DateofBirth" class="text-danger"></span>
            </div>
            

            
            <div class="form-group">

                <input type="submit" value="Save" class="btn btn-primary" />

            </div>
            <div class="form-group">

            <a class="btn btn-primary" asp-action="Index">Back to List</a>
            
            </div>

        </form>

    </div>

</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
