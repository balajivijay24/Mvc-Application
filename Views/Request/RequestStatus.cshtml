@inject IHttpContextAccessor HttpContextAccessor;
@{
    ViewData["Title"] = "RequestStatus";
}
@model IEnumerable<Request>

@{
    ViewData["Title"] = "Requeststatus";
}
<head>
  <link rel="stylesheet" href="~/css/form.css" type="text/css"asp-append-version="true" />
      <link rel="stylesheet" href="~/css/Index.css" type="text/css"asp-append-version="true" />
    <meta http-equiv='refresh'content="10000;url=https://localhost:7087/Main/SessionExpired" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
<header>
         <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light  ">
            <div class="container-fluid">
                <img src="~/images/Elogo.png" style="width: 5%;margin-right:30px;"  alt="LOGO">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EMPLOYEE MANAGEMENT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse  justify-content-between">
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="EmployeeData" asp-action="Profile"><b>Profile</b></a>
                          <li class="nav-item">  <a class="nav-link text-dark" asp-area="" asp-controller="EmployeeData" asp-action="Indexes"><b>View Details</b></a></li> 
                        
                              <li class="nav-item">   <a class="nav-link text-dark" asp-area="" asp-controller="Request" asp-action="Create"><b>Request</b></a>
                        </li></ul>
                          <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end" >
                    <ul class="navbar-nav ">
                         <li class="nav-item">
                         <a class="nav-link text-dark" asp-area="" asp-controller="Request" asp-action="RequestStatus"> <i class="fa fa-bell" style="font-size:28px;color:rgb(22, 17, 19)"></i></a>
                           
                        </li>
                        <li class="nav-item">
                         <a class="nav-link text-dark" asp-area="" asp-controller="EmployeeData" asp-action="Profile"> <i class="fa fa-user" style="font-size:28px;color:rgb(22, 17, 19)"></i></a>
                         
                        </li>
                         <li class="nav-item">
                        
                           <a class="greeting nav-link text-dark" style="color: rgb(187, 26, 26);">  Hi  @HttpContextAccessor.HttpContext.Session.GetString("EmailId")</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="logOut"><b>Logout</b></a>
                        </li>
                    </ul>
                </div> 
                         
             </div>
                  
            </div>
        </nav>
 
  </header>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.request)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExistingData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewData)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th></th>
           
        </tr>
    </thead>
    <tbody>
@foreach (var userRequest in Model) {
        <tr>
            <td>
                @userRequest.Name
            </td>
            <td>
                @userRequest.UserId
            </td>
            <td>
                @userRequest.request
            </td>
            <td>
                @userRequest.ExistingData
            </td>
            <td>
                @userRequest.NewData
            </td>
             <td>
                @userRequest.status
            </td>


            <td>
     
                <a asp-action="Delete" asp-route-id="@userRequest.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

